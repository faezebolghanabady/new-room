generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  password  String
}

model Message {
  id         Int      @id @default(autoincrement())
  room       String
  author     String
  message    String
  time       String
  createdAt  DateTime @default(now())

  chatId     Int      // Foreign key to Chat
  chat       Chat     @relation(fields: [chatId], references: [id])  // Define the relation field
}

model Chat {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  messages  Message[]  // Define the messages field (one-to-many relation)
}
